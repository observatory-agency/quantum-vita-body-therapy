---
import Button from '../components/Button.astro';
---
<section class="relative main-cta">
    <div class="max-w-5xl px-4 py-16 mx-auto text-center sm:py-48 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-extrabold text-white sm:text-4xl">
            Harness the power of Body, Mind &amp; Spirit.
        </h2>
        <p class="mt-4 mb-8 text-lg leading-6 text-gray-100">
            Book your appointment today
        </p>
        <Button />
    </div>
</section>

<style>
    .main-cta {
        background: url('/assets/cta.jpg') no-repeat center center;
        background-size: cover;
    }
</style>
