---
let {header, text, img, priceShort, priceLong} = Astro.props
---

<div class="bg-[#FCF8ED]">
    <div class="grid items-start justify-center gap-12 py-12 lg:py-24 lg:grid-cols-2 content-wrapper">
        <div class="space-y-8">
            <h3 class="text-2xl text-gray-800">{header}</h3>
            <p class="max-w-lg text-lg text-gray-700">
                {text}
            </p>
            <div class="space-y-3">
                <p class="text-2xl text-gray-800 font-display">60 minutes - ${priceShort}</p>
                <p class="text-2xl text-gray-800 font-display">90 minutes - ${priceLong}</p>
            </div>
        </div>
        <div>
            <img src={`/assets/services/${img}.jpg`} alt="{header}" class="shadow-md">
        </div>
    </div>
</div>
